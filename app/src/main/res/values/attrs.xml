<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SlidingMenu">
        <attr name="menuRightMargin" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="color"/>
        <attr name="changeColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="innerBackground" format="color"/>
        <attr name="outerBackground" format="color"/>
        <attr name="roundWidth" format="dimension"/>
        <attr name="progressTextSize" format="dimension"/>
        <attr name="progressTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="AliLoadingView">
        <attr name="loadingColor" format="color"/>
        <attr name="loadingWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <attr name="startNormal" format="reference"/>
        <attr name="starFocus" format="reference"/>
        <attr name="gradeNumber" format="integer"/>
        <attr name="starPadding" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="MyRadioButton">
        <attr name="buttonColor" format="color"/>
        <attr name="buttonSize" format="dimension"/>
        <attr name="bTextColor" format="color"/>
        <attr name="bTextSize" format="dimension"/>
        <attr name="bText" format="string"/>
    </declare-styleable>

    <declare-styleable name="SubmitButton">
        <attr name="buttonText" format="string"/>
        <attr name="bgColor" format="color"/>
        <attr name="succeedColor" format="color"/>
        <attr name="failedColor" format="color"/>
        <attr name="buttonTextSize" format="dimension"/>
        <attr name="progressStyle" format="enum">
            <enum name="loading" value="0"/>
            <enum name="progress" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="LikeView">
        <!--当前数值,默认0-->
        <attr name="number" format="integer"/>
        <!--数字颜色,默认#888888-->
        <attr name="textColor" format="color"/>
        <!--图形外边颜色,默认#888888-->
        <attr name="graphColor" format="color"/>
        <!--当前激活时图形颜色,默认#ca5f5f-->
        <attr name="animateColor" format="color"/>
        <!--字体大小,决定控件高度以及图形大小,默认14sp-->
        <attr name="textSize" format="dimension"/>
        <!--动画时间,默认300-->
        <attr name="animateDuration" format="integer"/>
        <!--图形与数字间的距离,默认3dp-->
        <attr name="distance" format="dimension"/>
        <!--图形与数字高度的比例,默认1.3-->
        <attr name="graphTextHeightRatio" format="float"/>
        <!--图形外边绘制宽度,默认3dp-->
        <attr name="graphStrokeWidth" format="dimension"/>
        <!--数字绘制宽度,默认2dp-->
        <attr name="textStrokeWidth" format="dimension"/>
        <!--是否激活,默认false-->
        <attr name="isActivated" format="boolean"/>
        <!--是否自动测量数字修改后的宽度改变,防止更改状态时控件宽度改变,默认开启-->
        <attr name="autoMeasureMaxWidth" format="boolean"/>
        <!--是否不允许取消点赞,默认false-->
        <attr name="notAllowedCancel" format="boolean"/>
        <!--对齐方式,前三种默认垂直居中-->
        <attr name="gravity" format="enum">
            <!--居中-->
            <enum name="center" value="1"/>
            <!--左对齐-->
            <enum name="left" value="2"/>
            <!--右对齐-->
            <enum name="right" value="3"/>
            <!--开始点-->
            <enum name="start" value="4"/>
        </attr>
    </declare-styleable>

    <!--圆角布局-->
    <declare-styleable name="RCRelativeLayout">
        <attr name="round_as_circle" format="boolean"/>

        <attr name="round_corner" format="integer|dimension"/>
        <attr name="round_top_left" format="integer|dimension"/>
        <attr name="round_top_right" format="integer|dimension"/>
        <attr name="round_bottom_left" format="integer|dimension"/>
        <attr name="round_bottom_right" format="integer|dimension"/>

        <attr name="stroke_color" format="color|reference"/>
        <attr name="stroke_width" format="integer|dimension"/>
    </declare-styleable>

    <declare-styleable name="XImageView">
        <attr name="x_as_circle" format="boolean"/>

        <attr name="x_round_corner" format="reference|dimension"/>
        <attr name="x_round_top_left" format="reference|dimension"/>
        <attr name="x_round_top_right" format="reference|dimension"/>
        <attr name="x_round_bottom_left" format="reference|dimension"/>
        <attr name="x_round_bottom_right" format="reference|dimension"/>

        <attr name="x_stroke_color" format="reference|color"/>
        <attr name="x_stroke_width" format="reference|dimension"/>
    </declare-styleable>

    <declare-styleable name="WaveViewBySin">
        <attr name="wave_color" format="reference|color"/>
        <attr name="wave_amplitude" format="dimension|reference"/>
        <attr name="wave_start_period" format="float"/>
        <attr name="wave_auto_start" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="WheelView">
        <attr name="wheelTextSize" format="dimension"/>
        <attr name="textVerticalSpacing" format="dimension"/>
        <attr name="normalTextColor" format="color"/>
        <attr name="selectedTextColor" format="color"/>
        <attr name="selectedLineColor" format="color"/>
        <attr name="visibilityCount" format="integer"/>
        <attr name="textGravity" format="integer">
            <flag name="top" value="0x30"/>

            <flag name="bottom" value="0x50"/>

            <flag name="left" value="0x03"/>

            <flag name="right" value="0x05"/>

            <flag name="center_vertical" value="0x10"/>

            <flag name="center_horizontal" value="0x01"/>

            <flag name="center" value="0x11"/>

            <flag name="start" value="0x00800003"/>

            <flag name="end" value="0x00800005"/>
        </attr>
        <attr name="selectPosition" format="integer"/>
    </declare-styleable>


    <attr name="header_view" format="reference"/>
    <attr name="target_view" format="reference"/>
    <attr name="header_init_offset" format="dimension"/>
    <attr name="target_init_offset" format="dimension"/>
    <declare-styleable name="XiamiPlanLayout">
        <attr name="header_view"/>
        <attr name="target_view"/>
        <attr name="hover_view" format="reference"/>
        <attr name="header_init_offset"/>
        <attr name="target_init_offset"/>
    </declare-styleable>
</resources>